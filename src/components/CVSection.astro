    .entry-line {
      font-size: 12px;
    }

    .indent {
      margin-right: 0.2rem;
      font-size: 12px;
    }

    .entry-subtitle {
      font-size: 12px;
      word-wrap: break-word;
    }

    .entry-meta {
      font-size: 11px;
      word-wrap: break-word;
    }

    .position-connector {
