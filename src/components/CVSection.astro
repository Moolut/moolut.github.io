    border-bottom: 2px solid #0f0;
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(15px, 1.8vw, 20px);
    color: var(--text-secondary);
    font-weight: normal;
    letter-spacing: 0.05em;
  }

  .prompt {
