    margin-right: 0.75rem;
    font-weight: bold;
    font-size: 1.1em;
  }

  .command {
    color: #ff0;
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .filename {
    color: var(--text-secondary);
    font-style: italic;
  }

  .terminal-content {
    padding: 1.25rem;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    overflow-wrap: break-word;
  }

  .terminal-entry {
    margin-bottom: 1.25rem;
  }

  .terminal-entry:last-child {
    margin-bottom: 0;
  }

  .entry-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .entry-prompt {
    color: #0f0;
    font-family: 'Courier New', Courier, monospace;
    font-weight: bold;
    font-size: clamp(18px, 2vw, 22px);
  }

  .entry-title {
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(17px, 1.9vw, 21px);
    color: var(--text-secondary);
    font-weight: bold;
    text-transform: uppercase;
    flex: 1;
  }

  .entry-period {
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(15px, 1.6vw, 18px);
    color: #0f0;
    opacity: 0.9;
  }

  .entry-line {
    margin-bottom: 0.4rem;
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(15px, 1.7vw, 18px);
    line-height: 1.6;
  }

  .indent {
    color: rgba(255, 255, 255, 0.3);
    margin-right: 0.5rem;
    font-size: clamp(15px, 1.7vw, 18px);
  }

  .entry-subtitle {
    color: rgba(255, 255, 255, 0.9);
    font-style: italic;
    font-size: clamp(15px, 1.7vw, 18px);
  }

  .entry-meta {
    color: rgba(255, 255, 255, 0.7);
    font-size: clamp(14px, 1.6vw, 17px);
  }

  /* Multi-position styles */
  .positions-container {
    margin-top: 0.5rem;
  }

  .position-entry {
    margin-bottom: 0.75rem;
  }

  .position-entry:last-child {
    margin-bottom: 0;
  }

  .position-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
  }

  .position-connector {
    color: rgba(255, 255, 255, 0.4);
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(15px, 1.7vw, 18px);
    margin-right: 0.25rem;
  }

  .position-title {
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(15px, 1.7vw, 18px);
    color: rgba(255, 255, 255, 0.95);
    font-style: italic;
  }

  .position-period {
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(14px, 1.5vw, 17px);
    color: #0f0;
    opacity: 0.8;
  }

  .position-indent {
    color: rgba(255, 255, 255, 0.3);
    margin-right: 0.5rem;
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(15px, 1.7vw, 18px);
    display: inline-block;
    width: 1.5ch;
  }

  .position-tech-line {
    margin-left: 0;
  }

  .position-highlights {
    margin-left: 0;
    padding-left: 0;
  }

  .tech-line {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
    flex-wrap: wrap;
  }

  .tech-label {
    color: #ff0;
    font-weight: bold;
    font-size: clamp(14px, 1.5vw, 16px);
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background: rgba(0, 255, 0, 0.1);
    border: 1px solid #0f0;
    color: #0f0;
    padding: 0.2rem 0.6rem;
    font-size: clamp(13px, 1.4vw, 15px);
    font-family: 'Courier New', Courier, monospace;
    border-radius: 3px;
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    background: rgba(0, 255, 0, 0.2);
    transform: translateY(-1px);
  }

  .highlights {
    margin-top: 0.5rem;
    padding-left: 0;
  }

  .highlight-line {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    font-family: 'Courier New', Courier, monospace;
    font-size: clamp(14px, 1.6vw, 17px);
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.85);
    align-items: flex-start;
  }

  .bullet {
    color: #0f0;
    flex-shrink: 0;
  }

  .entry-divider {
    margin-top: 1.25rem;
    color: rgba(255, 255, 255, 0.15);
    font-family: 'Courier New', Courier, monospace;
    font-size: 12px;
    overflow: hidden;
    text-overflow: clip;
  }

  @media (max-width: 768px) {
    .terminal-section {
      border-width: 1px;
    }

