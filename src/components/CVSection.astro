---
type CVItem = {
  title?: string
  subtitle?: string
  period?: string
  location?: string
  technologies?: string[]
  highlights?: string[]
  gpa?: string
  thesis?: string
  positions?: {
    position: string
    period: string
    technologies?: string[]
    highlights?: string[]
  }[]
}

type Props = {
  title: string
  items: CVItem[]
}

const { title, items } = Astro.props
---

<section class="terminal-section">
  <h2 class="terminal-header">
    <span class="prompt">$</span>
    <span class="command">cat</span>
    <span class="filename">{title.toLowerCase().replace(' ', '_')}.txt</span>
  </h2>
  <div class="terminal-content">
    {
      items.map((item, itemIndex) => (
        <div class="terminal-entry">
          <div class="entry-header">
            <span class="entry-prompt">></span>
            <span class="entry-title">{item.title}</span>
            {item.period && <span class="entry-period">[{item.period}]</span>}
          </div>

          {item.location && (
            <div class="entry-line">
              <span class="indent">  </span>
              <span class="entry-meta">üìç {item.location}</span>
            </div>
          )}

          {item.subtitle && (
            <div class="entry-line">
              <span class="indent">‚îî‚îÄ</span>
              <span class="entry-subtitle">{item.subtitle}</span>
            </div>
          )}

          {item.gpa && (
            <div class="entry-line">
              <span class="indent">  </span>
              <span class="entry-meta">üéì GPA: {item.gpa}</span>
            </div>
          )}

          {/* Multi-position display with L-shaped connector */}
          {item.positions && item.positions.length > 0 && (
            <div class="positions-container">
              {item.positions.map((pos, posIndex) => (
                <div class="position-entry">
                  <div class="position-header">
                    <span class="position-connector">
                      {posIndex === item.positions.length - 1 ? '‚îî‚îÄ' : '‚îú‚îÄ'}
                    </span>
                    <span class="position-title">{pos.position}</span>
                    <span class="position-period">[{pos.period}]</span>
                  </div>

                  {pos.technologies && pos.technologies.length > 0 && (
                    <div class="entry-line tech-line position-tech-line">
                      <span class="position-indent">  </span>
                      <span class="tech-label">[TECH]</span>
                      <div class="tech-tags">
                        {pos.technologies.map((tech) => (
                          <span class="tech-tag">{tech}</span>
                        ))}
                      </div>
                    </div>
                  )}

                  {pos.highlights && pos.highlights.length > 0 && (
                    <div class="highlights position-highlights">
                      {pos.highlights.map((highlight) => (
                        <div class="highlight-line">
                          <span class="bullet">‚Ä¢</span>
                          <span>{highlight}</span>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              ))}
            </div>
          )}

          {/* Regular display for single position */}
          {!item.positions && item.technologies && item.technologies.length > 0 && (
            <div class="entry-line tech-line">
              <span class="indent">  </span>
              <span class="tech-label">[TECH]</span>
              <div class="tech-tags">
                {item.technologies.map((tech) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
            </div>
          )}

          {!item.positions && item.highlights && item.highlights.length > 0 && (
            <div class="highlights">
              {item.highlights.map((highlight) => (
                <div class="highlight-line">
                  <span class="bullet">‚Ä¢</span>
                  <span>{highlight}</span>
                </div>
              ))}
            </div>
          )}

          {itemIndex < items.length - 1 && <div class="entry-divider">{'‚îÄ'.repeat(60)}</div>}
        </div>
      ))
    }
  </div>
</section>

<style>
  .terminal-section {
    margin-bottom: 2rem;
    border: 2px solid var(--text-secondary);
    background: rgba(0, 0, 0, 0.3);
    padding: 0;
    box-shadow: 0 0 20px rgba(0, 255, 0, 0.1);
    width: 100%;
    max-width: 100%;
    overflow-wrap: break-word;
  }

  .terminal-header {
    margin: 0;
    padding: 0.75rem 1.25rem;
    background: linear-gradient(
      to bottom,
      rgba(0, 255, 0, 0.15),
      rgba(0, 255, 0, 0.05)
