      margin-bottom: 0.4rem;
    }

    .position-connector {
      font-size: 14px;
      margin-right: 0.2rem;
    }

    .position-title {
      font-size: 14px;
    }

    .position-period {
      font-size: 13px;
      margin-left: 0;
    }

    .position-indent {
      margin-right: 0.3rem;
      font-size: 14px;
      width: 1.2ch;
    }

    .tech-line {
      gap: 0.4rem;
      margin-top: 0.5rem;
      flex-wrap: wrap;
    }

