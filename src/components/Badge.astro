---
type Props = {
  label: string;
  variant?: 'primary' | 'secondary';
};

const { label, variant = 'primary' } = Astro.props;
---

<span class={`badge badge--${variant}`}>{label}</span>

<style>
  .badge {
    display: inline-block;
    padding: 0.35rem 0.75rem;
    font-size: clamp(14px, 1.5vw, 16px);
    text-transform: uppercase;
    border: 1px solid var(--text-secondary);
    background: transparent;
    transition: all 0.3s cubic-bezier(0.29, 0.8, 0.21, 0.63);
    position: relative;
    overflow: hidden;
    font-family: 'Courier New', Courier, monospace;
    font-weight: 600;
    letter-spacing: 0.05em;
    cursor: default;
  }

  .badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(0, 255, 0, 0.3),
      transparent
    );
    transition: left 0.5s ease;
  }

  .badge:hover::before {
    left: 100%;
  }

  .badge--primary {
    border-color: #0f0;
    color: #0f0;
    background: rgba(0, 255, 0, 0.05);
    box-shadow: 0 0 5px rgba(0, 255, 0, 0.2);
  }

  .badge--primary:hover {
    background: rgba(0, 255, 0, 0.15);
    color: #0f0;
    box-shadow: 0 0 15px rgba(0, 255, 0, 0.5), 0 0 5px rgba(0, 255, 0, 0.3);
    transform: translateY(-2px);
    border-color: #0f0;
  }

  .badge--secondary {
    border-color: rgba(255, 255, 255, 0.4);
    color: rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.03);
  }

  .badge--secondary::before {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
  }

  .badge--secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    border-color: #fff;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .badge {
      padding: 0.25rem 0.5rem;
      font-size: 11px;
      border-width: 1px;
    }

    .badge--primary {
      box-shadow: 0 0 3px rgba(0, 255, 0, 0.15);
    }

    .badge--primary:hover {
      box-shadow: 0 0 10px rgba(0, 255, 0, 0.4);
    }

    .badge--secondary:hover {
      box-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
    }
  }

  @media (max-width: 480px) {
    .badge {
      padding: 0.2rem 0.4rem;
      font-size: 9px;
      word-break: break-word;
    }

    .badge--primary {
      box-shadow: 0 0 2px rgba(0, 255, 0, 0.1);
    }

    .badge--primary:hover {
      box-shadow: 0 0 6px rgba(0, 255, 0, 0.3);
    }

    .badge--secondary:hover {
      box-shadow: 0 0 5px rgba(255, 255, 255, 0.15);
    }
  }
</style>
