---
import TVLayout from '../layouts/TVLayout.astro'
import CVSection from '../components/CVSection.astro'
import Badge from '../components/Badge.astro'
import { education, workExperience, skills } from '../modules/cv-data'

// Transform education data for CVSection component
const educationItems = education.map((edu) => ({
  title: edu.institution,
  subtitle: edu.degree,
  period: edu.period,
  location: edu.location,
  details: [
    ...(edu.gpa ? [`GPA: ${edu.gpa}`] : []),
    ...(edu.thesis ? [`Thesis: ${edu.thesis}`] : []),
    ...(edu.details || []),
  ],
}))

// Transform work experience data for CVSection component
const workItems = workExperience.map((work) => ({
  title: work.company,
  subtitle: work.position,
  period: work.period,
  location: work.location,
  details: work.responsibilities,
}))
---

<TVLayout title="about">
  <article class="about">
    <h1 class="page-title big-text glitchy-text">ABOUT ME</h1>

    <CVSection title="Education" items={educationItems} />

    <CVSection title="Work Experience" items={workItems} />

    <section class="cv-section">
      <h2 class="section-title big-text">Skills & Technologies</h2>
      <div class="skills-grid">
        <div class="skill-category">
          <h3 class="skill-category__title">Technologies</h3>
          <div class="badges">
            {skills.technologies.map((tech) => <Badge label={tech} />)}
          </div>
        </div>
        <div class="skill-category">
          <h3 class="skill-category__title">Skills</h3>
          <div class="badges">
            {skills.skills.map((skill) => <Badge label={skill} variant="secondary" />)}
          </div>
        </div>
      </div>
    </section>

    <section class="cv-section">
      <h2 class="section-title big-text">Languages</h2>
      <ul class="languages-list">
        {
          skills.languages.map((lang) => (
            <li>
              <strong>{lang.name}:</strong> {lang.level}
            </li>
          ))
        }
      </ul>
    </section>
  </article>
</TVLayout>

<style>
  .about {
    max-width: 100%;
  }

  .page-title {
    margin-bottom: 3rem;
    text-transform: uppercase;
  }

  .cv-section {
    margin-bottom: 4rem;
  }

  .section-title {
    margin-bottom: 2rem;
    text-transform: uppercase;
  }

  .skills-grid {
    display: grid;
    gap: 3rem;
  }

  .skill-category__title {
    font-size: clamp(18px, 2vw, 22px);
    text-transform: uppercase;
    margin-bottom: 1.5rem;
    opacity: 0.9;
  }

  .badges {
    display:flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .languages-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .languages-list li {
    font-size: clamp(16px, 1.8vw, 20px);
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .languages-list li:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }

  .languages-list strong {
    color: var(--text-secondary);
    text-transform: uppercase;
  }

  @media (min-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
